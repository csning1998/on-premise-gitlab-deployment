gitlab_postgres_compute = {
  cluster_identity = {
    service_name = "gitlab"
    component    = "postgres"
    cluster_name = "20-gitlab-postgres"
  }

  # Postgres Data Nodes
  nodes = {
    "gitlab-postgres-db-node-00" = { ip = "172.16.140.200", vcpu = 4, ram = 4096 }
    "gitlab-postgres-db-node-01" = { ip = "172.16.140.201", vcpu = 4, ram = 4096 }
    "gitlab-postgres-db-node-02" = { ip = "172.16.140.202", vcpu = 4, ram = 4096 }
  }

  # Etcd Nodes (Odd number required)
  etcd_nodes = {
    "gitlab-postgres-etcd-node-00" = { ip = "172.16.140.210", vcpu = 2, ram = 2048 }
    "gitlab-postgres-etcd-node-01" = { ip = "172.16.140.211", vcpu = 2, ram = 2048 }
    "gitlab-postgres-etcd-node-02" = { ip = "172.16.140.212", vcpu = 2, ram = 2048 }
  }

  # HAProxy Node
  ha_config = {
    virtual_ip = "172.16.140.250"
    haproxy_nodes = {
      "gitlab-postgres-haproxy-node-00" = { ip = "172.16.140.220", vcpu = 2, ram = 2048 }
    }
  }

  base_image_path = "../../../packer/output/04-base-postgres/ubuntu-server-24-04-base-postgres.qcow2"
  inventory_file  = "inventory-postgres-gitlab.yaml"
}

gitlab_postgres_infra = {
  network = {
    nat = {
      gateway = "172.16.92.1"
      cidrv4  = "172.16.92.0/24"
      dhcp = {
        start = "172.16.92.2"
        end   = "172.16.92.254"
      }
    }
    hostonly = {
      gateway = "172.16.140.1"
      cidrv4  = "172.16.140.0/24"
    }
  }
  allowed_subnet = "172.16.140.0/24"
}
