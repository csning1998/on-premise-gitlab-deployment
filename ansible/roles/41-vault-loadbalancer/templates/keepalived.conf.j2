global_defs {
    router_id {{ inventory_hostname }}
}

vrrp_instance VI_1 {
    state MASTER
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 51
    priority 101
    advert_int 1
    
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    
    virtual_ipaddress {
        {{ vault_vip | default('172.16.139.250') }}/24
    }
}
